<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
    android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/v_student_name"
                android:text="Student Name"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/v_class_attended"
                android:text="Class Attended"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView


                android:id="@+id/v_student"
               android:layout_below="@id/v_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/v_time"
                android:layout_width="wrap_content"
                android:layout_below="@id/v_student"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:text="Time" />

            <TextView
                android:id="@+id/v_time_lastupadate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_time"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/v_location"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/v_loc"
                android:layout_width="wrap_content"
                android:layout_below="@id/v_couse_sessions"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="Location" />

            <TextView
                android:id="@+id/v_location"
                android:layout_width="wrap_content"
                android:layout_below="@id/v_time"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                />



            <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:layout_toEndOf="@id/v_student"
    />

            <TextView

                android:id="@+id/v_couse_sessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_below="@id/v_class_attended"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-condensed-light"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

